<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3>Listing Details:</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= Listing.image.url %>" class="card-img-top show-img" alt="Listing_img">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= Listing.title %>
                    </b><br>
                    <%= Listing.description %><br>
                        &#x20B9;<%= Listing.price.toLocaleString("en-IN") %><br>
                            <%= Listing.location %><br>
                                <%= Listing.country %><br><br>
                                    <div class="buttons">
                                        <a href="/listings/<%= Listing.id %>/edit" style="text-decoration: none;"
                                            class="btn btn-dark edit-btn">Edit Listing</a>
                                        <form method="post" action="/listings/<%= Listing.id %>?_method=DELETE">
                                            <button class="btn btn-dark del-btn">Delete listing</button>
                                        </form>
                                    </div>
                </p>
            </div>
        </div>
    </div>
</body>